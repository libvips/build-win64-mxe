-  DeleteCriticalSection(mutex);
+  (void)mutex;
+  // Unlocked SWR locks does not use resources
   return 0;
 }
 
@@ -137,7 +140,7 @@ static INLINE int pthread_cond_broadcast(pthread_cond_t *const condition) {
